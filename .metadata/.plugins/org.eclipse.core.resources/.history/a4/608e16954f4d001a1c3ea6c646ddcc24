	@RequestMapping("/main")
    public ModelAndView choosePlanShop(){
		ModelAndView main = new ModelAndView("main");
		List<String> fruitList = new ArrayList<String>();		        
        fruitList.add("apple");
        fruitList.add("orange");
        fruitList.add("banana");
         
        main.addObject("value", fruitList);
        
        return main;


    }
	
	
}
 

